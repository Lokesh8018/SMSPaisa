{
  "name": "smspaisa-backend",
  "version": "1.0.0",
  "description": "SMSPaisa Backend API - Passive income SMS platform",
  "main": "src/app.js",
  "scripts": {
    "start": "prisma migrate deploy && node src/app.js",
    "dev": "nodemon src/app.js",
    
    "prisma:generate": "prisma generate",
    "migrate:deploy": "prisma migrate deploy",
    
    "admin:build": "cd admin && npm install && npm run build",
    
    "build": "npm install && prisma generate && npm run admin:build",
    
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.10.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.3",
    "express-rate-limit": "^7.2.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "razorpay": "^2.9.2",
    "socket.io": "^4.7.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.0",
    "prisma": "^5.10.0"
  }
}